extends ../layouts/default

block main
  center
      h2|Department

block content
  center
     h4|List of Departments
  .table-responsive
    table(class='table table-striped table-bordered table-condensed')
      thead
        tr
          th #
          th Department Name
          th
          th
      tbody         
        cnt = 0;
        - each dp in dept
          tr
            td= ++cnt
            td= dp.department_name
            td
              form(method="get", action="/department/:id/edit")
                //input(type='hidden', name="_method", value="put") 
                //input(type='hidden', name='_csrf', value="#{csrf_token}")
                input(type="hidden", value=dp._id.toHexString(), name="_id")
                input(type="submit", value="Edit", class="formLink")
            td
              form( method="post", action="/department/:id")
                input(type='hidden', name="_method", value="delete") 
                input(type='hidden', name='_csrf', value="#{csrf_token}")
                input(name="_id", type="hidden", value=dp._id.toHexString()) 
                input(type="submit", value="Delete", class="formLink")
      tbody
        if cnt == 0
          tr
           td
           td No entries found
           td
           td
