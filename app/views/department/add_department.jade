extends ../layouts/default

block main
  center
      h2|Department

block content
  form(class="formDecor", method='post')
        input(type='hidden', name='_csrf', value="#{csrf_token}")
        center
           h4|Add a Department
        
        hr
        .form-horizontal(role="form")
          .form-group
            .col-sm-2
            .col-sm-3
              label(for='dn',class="control-label") Department Name
            .col-sm-5
               input#dn.NameClass(type="text", name="department", placeholder="Enter a department name...", class="form-control", id="dept_input")
            .col-sm-2
           
          .form-group
            .col-sm-offset-5.col-sm-1
              button.btn.btn-default(type="submit", name="Add") Add
            .col-sm-1
              button.btn.btn-default(type="reset", name="Reset") Reset
          
            
   //- div.bodyContent2
      div.subTitle List of Departments
      cnt = 0;
      - each dp in depts
        div.listTable
          div.listTableRow
            div.listTableRowItem= ++cnt
              .
            div.listTableRowItem= dp.department
            div.listTableRowItem
              div.showInline
                form(method="get", action="/dord/dept/:id/edit")
                  input(type="hidden", value=dp._id.toHexString(), name="_id")
                  input(type="submit", value="Edit", class="formLink")
              div.showInline
                form( method="post", action="/dord/dept/:id/delete") 
                  input(name="_id", type="hidden", value=dp._id.toHexString()) 
                  input(type="submit", value="Delete", class="formLink")
      if cnt == 0
        div.listTable No entries found
