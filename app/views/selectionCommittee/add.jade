      cell4.innerHTML = "<input type='text' id='date_of_birth"+j+"' name='waiting["+j+"][date_of_birth]' class='form-control'>";
      cell5.innerHTML = "<input type='text' id='address"+j+"' name='waiting["+j+"][address]' class='form-control'>";
      cell6.innerHTML = "<input type='text' id='designation"+j+"' name='waiting["+j+"][designation]' class='form-control'>";
      cell7.innerHTML = "<input type='text' id='salary"+j+"' name='waiting["+j+"][salary]' class='form-control'>";
      cell8.innerHTML = "<input type='text' id='appointment"+j+"' name='waiting["+j+"][appointment]' class='form-control'>";
