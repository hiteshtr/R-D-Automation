extends ../layouts/default

block main
  center
      h2|Project Class
block content
  form(class="formDecor", method='post')
        input(type='hidden', name='_csrf', value="#{csrf_token}")
        center
          h4|Add a Project Class
        
        hr
  
        .form-horizontal(role="form")
          .form-group
            .col-sm-2
            .col-sm-3
             label(for='pcc',class="control-label") Project Class Code
            .col-sm-5
               input#pcc.NameClass(type='text', name='pclasscode_name',placeholder="Enter a project class code...",class="form-control", id="pclasscode_input")
            .col-sm-2
        
          .form-group
            .col-sm-2
            .col-sm-3
             label(for='pcn',class="control-label") Project Class Name
            .col-sm-5
               input#pcn.NameClass(type='text', name='pclass_name',placeholder="Enter a project class name...",class="form-control", id="pclass_input")
            .col-sm-2
           
          .form-group
            .col-sm-offset-5.col-sm-1
              button.btn.btn-default(type='submit',name='submit') Add
                 
            .col-sm-1
              button.btn.btn-default(type='reset',name='reset') Reset
      
    //-div.bodyContent2
      div.subTitle List of Project Classes
      cnt = 0;
      - each pc in pclasses
        div.listTable
          div.listTableRow
            div.listTableRowItem= ++cnt
              
            div.listTableRowItem= pc.project_class
            div.listTableRowItem= pc.project_class_code

            div.listTableRowItem
              div.showInline
                form(method="get", action="/dord/pclass/:id/edit")
                  input(type="hidden", value=pc._id.toHexString(), name="_id")
                  input(type="submit", value="Edit", class="formLink")
              div.showInline
                form( method="post", action="/dord/pclass/:id/delete") 
                  input(name="_id", type="hidden", value=pc._id.toHexString()) 
                  input(type="submit", value="Delete", class="formLink")
      if cnt == 0
        div.listTable No entries found 
