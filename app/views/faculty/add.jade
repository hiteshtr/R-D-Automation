extends ../layouts/default

block main
  center
      h2|Add New Faculty
block content
            
  form(class="formDecor", method='post',action='/faculty')
    input(type='hidden', name='_csrf', value="#{csrf_token}")
    .form-horizontal(role="form")
     .form-group
      .col-sm-2
      .col-sm-3
        label(class="control-label") Faculty Name
      .col-sm-5
        input(type="text", name="faculty_name", placeholder="Enter a faculty name", class="form-control", id="faculty_input",value=faculty.faculty_name)
      .col-sm-2
     .form-group
      .col-sm-2
      .col-sm-3
        label(class="control-label") Department
      .col-sm-5
        select(name="faculty_dept_id", class="form-control")
          - each department in departments
            if(faculty.faculty_dept_id)
              option(value=department._id, selected=faculty.faculty_dept_id.toString() == department._id.toString() ? true : false)= department.department_name
            else
              option(value=department._id, selected=faculty.faculty_dept_id == department._id ? true : false)= department.department_name 
      .col-sm-2
    
     .form-group
      .col-sm-2
      .col-sm-3
        label(class="control-label") Designation
      .col-sm-5
        select(name="faculty_desig_id", class="form-control")
          - each post in posts
            if(faculty.faculty_desig_id)
              option(id=post._id, value=post._id,selected=faculty.faculty_desig_id.toString() == post._id.toString() ? true : false)= post.designation
            else
              option(id=post._id, value=post._id,selected=faculty.faculty_desig_id == post._id ? true : false)= post.designation
      .col-sm-2
               
     .form-group
      .col-sm-2
      .col-sm-3  
        label(class="control-label") Email
      .col-sm-5
        input(type="email", name="faculty_email", placeholder="Enter faculty email", class="form-control", id="faculty_email",value=faculty.faculty_email)
      .col-sm-2
     

     .form-group
        .col-sm-offset-5.col-sm-1
           button.btn.btn-default(type="submit", name="Register") Register
        .col-sm-1
           button.btn.btn-default(type="reset", name="Reset") Reset
        