extends ../layouts/default

block main
  center
      h2|Add New Post

block content
  form(class="formDecor", method='post',action='/posts')
    input(type='hidden', name='_csrf', value="#{csrf_token}")
    .form-horizontal(role="form")
     .form-group
      .col-sm-2
      .col-sm-3
         label(for='designation',class="control-label") Designation
      .col-sm-5
         input(type="text", name="designation", placeholder="Enter designation", class="form-control", id="designation",value=posts.designation)
      .col-sm-2
  
     .form-group
      .col-sm-2
      .col-sm-3      
         label(for='minimum_qualification',class="control-label") Minimum Qualification
      .col-sm-5
         input(type="text", name="minimum_qualification", placeholder="Enter minimum qualification", class="form-control", id="minimum_qualification",value=posts.minimum_qualification)
      .col-sm-2

     .form-group
      .col-sm-2
      .col-sm-3      
        label(class="control-label") Minimum Experience
      .col-sm-5
        .row
          .col-sm-6
            .input-group
              span.input-group-addon Year
              select(name="year", id="year", class="form-control") 
                option(value=0,selected=posts.year==0 ? true : false) 0 
                option(value=1,selected=posts.year==1 ? true : false) 1
                option(value=2,selected=posts.year==2 ? true : false) 2
                option(value=3,selected=posts.year==3 ? true : false) 3
                option(value=4,selected=posts.year==4 ? true : false) 4
                option(value=5,selected=posts.year==5 ? true : false) 5
                option(value=6,selected=posts.year==6 ? true : false) 6
                option(value=7,selected=posts.year==7 ? true : false) 7
                option(value=8,selected=posts.year==8 ? true : false) 8
                option(value=9,selected=posts.year==9 ? true : false) 9
                option(value=10,selected=posts.year==10 ? true : false) 10
                option(value=11,selected=posts.year==11 ? true : false) 11
                option(value=12,selected=posts.year==12 ? true : false) 12
                option(value=13,selected=posts.year==13 ? true : false) 13
                option(value=14,selected=posts.year==14 ? true : false) 14
                option(value=15,selected=posts.year==15 ? true : false) 15
                option(value=16,selected=posts.year==16 ? true : false) 16
                option(value=17,selected=posts.year==17 ? true : false) 17
                option(value=18,selected=posts.year==18 ? true : false) 18
                option(value=19,selected=posts.year==19 ? true : false) 19
                option(value=20,selected=posts.year==20 ? true : false) 20
          .col-sm-6
            .input-group
              span.input-group-addon Month
              select(name="month", id="month", class="form-control")  
                option(value=0,selected=posts.month==0 ? true : false) 0
                option(value=1,selected=posts.month==1 ? true : false) 1
                option(value=2,selected=posts.month==2 ? true : false) 2
                option(value=3,selected=posts.month==3 ? true : false) 3
                option(value=4,selected=posts.month==4 ? true : false) 4
                option(value=5,selected=posts.month==5 ? true : false) 5
                option(value=6,selected=posts.month==6 ? true : false) 6
                option(value=7,selected=posts.month==7 ? true : false) 7
                option(value=8,selected=posts.month==8 ? true : false) 8
                option(value=9,selected=posts.month==9 ? true : false) 9
                option(value=10,selected=posts.month==10 ? true : false) 10
                option(value=11,selected=posts.month==11 ? true : false) 11
      .col-sm-2  

     .form-group
      .col-sm-2
      .col-sm-3
        label(for='designation_type',class="control-label") Designation Type
      .col-sm-5
        select(name="designation_type", id="designation_type", class="form-control")            
          option(value=1,selected=posts.designation_type==1 ? true : false) Contractual Position
          option(value=2,selected=posts.designation_type==2 ? true : false) Permanent Position
      .col-sm-2
     .form-group
      .col-sm-2
      .col-sm-3
        label(for='designation_staff',class="control-label") Designation Staff
      .col-sm-5
        select(name="designation_staff", id="designation_staff", class="form-control")  
          option(value=1,selected=posts.designation_staff==1 ? true : false) Scientific Staff
          option(value=2,selected=posts.designation_staff==2 ? true : false) Technical Staff
          option(value=3,selected=posts.designation_staff==3 ? true : false) Admiistrative Staff
          option(value=4,selected=posts.designation_staff==4 ? true : false) Academic Staff
      .col-sm-2

     .form-group
      .col-sm-offset-5.col-sm-1
        button.btn.btn-default(type="submit", name='add') Add
      .col-sm-1
        button.btn.btn-default(type="reset",name='reset') Reset
      
