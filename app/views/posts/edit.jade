extends ../layouts/default

block main
  center
      h2|Posts

block content
  form(class="formDecor", method='post',action='/posts/:id')
        input(type='hidden', name="_method", value="put") 
        input(type='hidden', name='_csrf', value="#{csrf_token}")
        input(name="_id", type="hidden", value=po._id.toHexString()) 
        center
          h4|Edit Details
        
        hr
        .form-horizontal(role="form")
          .form-group
            .col-sm-2
            .col-sm-3
             
                label(for='pn',class="control-label") Post Name
            .col-sm-5
               input#pn.NameClass(type="text", name="post_name",value=po.post_name, class="form-control")
            .col-sm-2
          .form-group
            .col-sm-2
            .col-sm-3
             
                label(for='pq',class="control-label") Post Qualification
            .col-sm-5
               input#pq.NameClass(type="text", name="post_qualification",value=po.post_qualification, class="form-control")
            .col-sm-2
          .form-group
            .col-sm-2
            .col-sm-3
             
                label(for='pt',class="control-label") Post Type
            .col-sm-5
                select(name="post_type", id="post_type", class="form-control")
                    if po.post_type == "0"
                        option(value=0, selected) (select)
                    else
                        option(value=0) (select)

                    if po.post_type == "1"
                        option(value=1, selected) Contractual Position
                    else
                        option(value=1) Contractual Position

                    if po.post_type == "2"
                        option(value=2, selected) Permanent Position
                    else
                        option(value=2) Permanent Position
            .col-sm-2
          .form-group
            .col-sm-2
            .col-sm-3
             
                label(for='pd',class="control-label") Post Designation
            .col-sm-5
                select(name="post_desig", id="post_desig", class="form-control")
                    if po.post_desig == "0"
                        option(value=0) (select)
                    else
                        option(value=0, selected) (select)

                    if po.post_desig == "1"
                        option(value=1) Scientific Staff
                    else
                        option(value=1, selected) Scientific Staff

                    if po.post_desig == "2"
                        option(value=2) Technical Staff
                    else
                        option(value=2, selected) Technical Staff

                    if po.post_desig == "3"
                        option(value=3) Admiistrative Staff
                    else
                        option(value=3, selected) Admiistrative Staff

                    if po.post_desig == "4"
                        option(value=4) Academic Staff
                    else
                        option(value=4, selected) Academic Staff

            .col-sm-2
          .form-group
            .col-sm-offset-5.col-sm-1
              button.btn.btn-default(type="submit", name="Add") Update



               
                