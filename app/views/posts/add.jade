extends ../layouts/default

block main
  center
      h2|Add New Post

block content
  form(class="formDecor", method='post',action='/posts')
    input(type='hidden', name='_csrf', value="#{csrf_token}")
    .form-horizontal(role="form")
     .form-group
      .col-sm-2
      .col-sm-3
         label(for='designation',class="control-label") Designation
      .col-sm-5
         input(type="text", name="designation", placeholder="Enter designation", class="form-control", id="designation",value=posts.designation)
      .col-sm-2
  
     .form-group
      .col-sm-2
      .col-sm-3      
         label(for='min_qualification',class="control-label") Minimum Qualification
      .col-sm-5
         input(type="text", name="min_qualification", placeholder="Enter minimum qualification", class="form-control", id="min_qualification",value= posts.min_qualification)
      .col-sm-2

     .form-group
      .col-sm-2
      .col-sm-3      
        label(class="control-label" for="min_experience") Minimum Experience
      .col-sm-5
        .row
          .col-sm-6
            .input-group
              span.input-group-addon Year
              input.form-control(name="min_experience[year]", id="year", type="number", min="0")
                
          .col-sm-6
            .input-group
              span.input-group-addon Month
              input.form-control(name="min_experience[month]", id="month", type="number", min="0")  
                
      .col-sm-2  

     .form-group
      .col-sm-2
      .col-sm-3
        label(for='designation_type',class="control-label") Designation Type
      .col-sm-5
        select(name="designation_type", id="designation_type", class="form-control")            
          option(value=1,selected=posts.designation_type==1 ? true : false) Contractual Position
          option(value=2,selected=posts.designation_type==2 ? true : false) Permanent Position
      .col-sm-2
     .form-group
      .col-sm-2
      .col-sm-3
        label(for='staff_type',class="control-label") Designation Staff
      .col-sm-5
        select(name="staff_type", id="staff_type", class="form-control")  
          option(value=1,selected=posts.staff_type==1 ? true : false) Scientific Staff
          option(value=2,selected=posts.staff_type==2 ? true : false) Technical Staff
          option(value=3,selected=posts.staff_type==3 ? true : false) Admiistrative Staff
          option(value=4,selected=posts.staff_type==4 ? true : false) Academic Staff
      .col-sm-2

     .form-group
      .col-sm-offset-5.col-sm-1
        button.btn.btn-default(type="submit", name='add') Add
      .col-sm-1
        button.btn.btn-default(type="reset",name='reset') Reset
      
