extends ../layouts/login

block content
	form.form-signin(action='/user/sessions', method='post')
		input(type='hidden', name='_csrf', value="#{csrf_token}")
		h2.form-signin-heading Please sign in
		input.form-control(type='text', placeholder='Username', required='required', autofocus='autofocus', name="username")
		input.form-control(type='password', placeholder='Password', required='required', name="password")
		button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in