extends ../layouts/default

block main
  center
      h2|Project Class
block content
  center
    h4| List of Project Classes
  .table-responsive
    table(class='table table-striped table-bordered table-condensed')
      thead
        tr
          th #
          th Project Class
          th Project Class Code
          th
          th
      tbody         
        cnt = 0;
         - each pc in pclasses
            tr
             td= ++cnt
             td= pc.project_class
             td= pc.project_class_code
             td
                form(method="get", action="/Projectclass/:id/edit")
                  input(type="hidden", value=pc._id.toHexString(), name="_id")
                  input(type="submit", value="Edit", class="formLink")
             td
                form( method="post", action="/Projectclass/:id") 
                  input(type='hidden', name="_method", value="delete") 
                  input(type='hidden', name='_csrf', value="#{csrf_token}")
                  input(name="_id", type="hidden", value=pc._id.toHexString()) 
                  input(type="submit", value="Delete", class="formLink")
      tbody
        if cnt == 0
          tr
            td
            td No entries found
            td
            td
            td

